<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeBaseDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="lesson_btn">
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/white</item>
    </style>
    <style name="Corner_card">
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">30dp</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>
    <style name="layout_bground">
        <item name="android:background">@drawable/lesson_background_night</item>
    </style>
</resources>
